<div class="container my-container" id="nickname-container">
    <h3 class="text-center">What would you like to call your <span class="a"><%= onepokemon.name %></span>?</h3>
    <div class="well">
        <img class="home-sprite" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= onepokemon.dexnum %>.png" />
    </div>
    <div class="well">
        <form class="text-center" method="POST" action="/pokemon/<%= onepokemon.id %>/?_method=PUT">
            <input class="text-center text-field" type="text" value="<%= onepokemon.nickname %>" name="nickname"/>
            <div class="button-box">
                <button class="sapphire btn btn-primary" type="submit">Rename</button>
            </div>
        </form>
        <form class="text-center" method="POST" action="/pokemon/<%= onepokemon.id %>/?_method=PUT">
            <input class="hidden" type="text" value="" name="nickname"/>
            <button class="ruby btn btn-primary" type="submit">Reset</button>
        </form>
    </div>
</div>


